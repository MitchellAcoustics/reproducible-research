{
  "name": "Research Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "PYTHON_VERSION": "3.12",
      "R_VERSION": "4.4.1"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "REditorSupport.r",
        "quarto.quarto-vscode",
        "James-Yu.latex-workshop",
        "nvarner.typst-lsp",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "eamodio.gitlens",
        "ms-vscode-remote.remote-containers",
        "quarto.quarto"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/python_env/shims/python",
        "r.rpath.linux": "/usr/local/bin/R",
        "r.rterm.linux": "/usr/local/bin/R",
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "r.lsp.enabled": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {},
    "ghcr.io/rocker-org/devcontainer-features/renv-cache:0": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  ],
  "remoteEnv": {
    "PYTHONPATH": "/workspace/src/python:${containerEnv:PYTHONPATH}",
    "R_LIBS_USER": "/opt/r_env",
    "RENV_PATHS_ROOT": "/opt/r_env",
    "RENV_PATHS_LIBRARY": "/opt/r_env/library",
    "RYE_HOME": "/opt/python_env"
  },
  "postCreateCommand": "bash .devcontainer/setup_env.sh && bash .devcontainer/test_devcontainer_setup.sh"
}